                    name: 'Customer Name',
                    email: 'customer@example.com',
                    contact: 'Customer Phone Number'
                },
                theme: {
                    color: '#F37254'
                },
                modal: {
                    ondismiss: function() {
                        updatePaymentStatus(orderId, 'Failed');
                    }
                }
            };
            const rzp = new Razorpay(options);
            rzp.open();
        } else {
            Swal.fire({
                title: 'Error!',
                text: data.message || 'Failed to retry payment. Please try again.',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        }
    })
    .catch(error => {
