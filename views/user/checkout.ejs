    const updateCartSummary = (data) => {
        // Ensure data is valid and contains necessary properties
        if (!data || typeof data !== 'object') {
            console.error('Invalid data for updateCartSummary:', data);
            return;
        }

        const {
            subtotal = 0,
            totalAmount = 0,
            couponDiscount = 0,
