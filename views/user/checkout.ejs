function placeOrder(addressId, paymentMethod, couponCodeValue, razorpayResponse = null) {
    const orderData = {
        addressId: addressId,
        paymentMethod: paymentMethod,
        couponCode: couponCodeValue
    };

    if (razorpayResponse) {
        orderData.razorpay_payment_id = razorpayResponse.razorpay_payment_id;
        orderData.razorpay_order_id = razorpayResponse.razorpay_order_id;
        orderData.razorpay_signature = razorpayResponse.razorpay_signature;
    }

    fetch('/place-order', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(orderData)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            if (paymentMethod === 'Razor pay' && data.razorpayOrderId) {
                // Initialize Razorpay payment
                const options = {
                    key: data.keyId,
                    amount: data.amount,
                    currency: data.currency,
                    name: 'VAANZA',
                    description: 'Order Payment',
                    order_id: data.razorpayOrderId,
                    handler: function (response) {
                        updatePaymentStatus(data.orderId, 'Paid', response);
                    },
                    prefill: {
                        name: 'Customer Name',
                        email: 'customer@example.com',
                        contact: 'Customer Phone Number'
                    },
                    theme: {
                        color: '#F37254'
                    },
                    modal: {
                        ondismiss: function() {
                            updatePaymentStatus(data.orderId, 'Failed');
                        }
                    }
                };
                const rzp = new Razorpay(options);
                rzp.open();
            } else {
                // Order placed successfully (for COD or other methods)
                Swal.fire({
                    title: 'Success!',
                    text: data.message || 'Order placed successfully!',
                    icon: 'success',
                    confirmButtonText: 'OK'
                })
                .then(() => {
                    window.location.href = `/order-summary/${data.orderId}`;
                });
            }
        } else {
            Swal.fire({
                title: 'Error!',
                text: data.message || 'Failed to place order. Please try again.',
                icon: 'error',
                confirmButtonText: 'Retry'
            });
        }
    })
    .catch(error => {
        console.error('Error details:', error);
        Swal.fire({
            title: 'Error!',
            text: `An unexpected error occurred: ${error.message}. Please try again later.`,
            icon: 'error',
            confirmButtonText: 'Retry'
        });
    });
}

function updatePaymentStatus(orderId, status, razorpayResponse = null) {
    const updateData = {
        orderId: orderId,
        status: status
    };

    if (razorpayResponse) {
        updateData.razorpay_payment_id = razorpayResponse.razorpay_payment_id;
        updateData.razorpay_order_id = razorpayResponse.razorpay_order_id;
        updateData.razorpay_signature = razorpayResponse.razorpay_signature;
    }

    fetch('/update-payment-status', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(updateData)
    })
    .then(res => res.json())
    .then(data => {
        if (data.success) {
            if (status === 'Paid') {
                window.location.href = `/order-summary/${orderId}`;
            } else {
                // Payment failed or was dismissed
                Swal.fire({
                    title: 'Payment Failed',
                    text: 'Your payment failed or was canceled. Please try again.',
                    icon: 'error',
                    confirmButtonText: 'Retry'
                }).then(() => {
                    window.location.href = '/profile?tab=orders';
                });
            }
        } else {
            Swal.fire({
                title: 'Error',
                text: 'Failed to update payment status. Please contact support.',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        }
    })
    .catch(error => {
        console.error('Error:', error);
        Swal.fire({
            title: 'Error',
            text: 'An error occurred while updating payment status.',
            icon: 'error',
            confirmButtonText: 'OK'
        });
    });
}

