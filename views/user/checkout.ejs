    if (selectedAddress && selectedPaymentMethod) {
        const addressId = selectedAddress.value;
        const paymentMethod = selectedPaymentMethod.value;

        placeOrder(addressId, paymentMethod, couponCodeValue);
    } else {
        Swal.fire({
            title: 'Warning!',
            text: 'Please select an address and payment method',
            icon: 'warning',
            confirmButtonText: 'OK'
        });
    }
});

function placeOrder(addressId, paymentMethod, couponCodeValue, razorpayResponse = null) {
    const orderData = {
        addressId: addressId,
        paymentMethod: paymentMethod,
        couponCode: couponCodeValue
    };

    if (razorpayResponse) {
        orderData.razorpay_payment_id = razorpayResponse.razorpay_payment_id;
        orderData.razorpay_order_id = razorpayResponse.razorpay_order_id;
        orderData.razorpay_signature = razorpayResponse.razorpay_signature;
    }

    fetch('/place-order', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(orderData)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            if (data.razorpayOrderId) {
                // Initialize Razorpay payment
                const options = {
                    key: data.keyId,
                    amount: data.amount,
                    currency: data.currency,
                    name: 'VAANZA',
                    description: 'Order Payment',
                    order_id: data.razorpayOrderId,
                    handler: function (response) {
                        // On successful payment, call placeOrder again with Razorpay response
                        placeOrder(addressId, paymentMethod, couponCodeValue, response);
                    },
                    prefill: {
                        name: 'Customer Name',
                        email: 'customer@example.com',
                        contact: 'Customer Phone Number'
                    },
                    theme: {
                        color: '#F37254'
                    }
                };
                const rzp = new Razorpay(options);
                rzp.open();
            } else {
                // Order placed successfully
                Swal.fire({
                    title: 'Success!',
                    text: 'Order placed successfully!',
                    icon: 'success',
                    confirmButtonText: 'OK'
                })
                .then(() => {
                    window.location.href = `/order-summary/${data.orderId}`;
                });
            }
        } else {
            Swal.fire({
                title: 'Error!',
                text: data.message || 'Failed to place order. Please try again.',
                icon: 'error',
                confirmButtonText: 'Retry'
            });
        }
    })
    .catch(error => {
        console.error('Error:', error);
        Swal.fire({
            title: 'Error!',
            text: 'An unexpected error occurred. Please try again later.',
            icon: 'error',
            confirmButtonText: 'Retry'
        });
    });
}

