    const applyCouponBtns = document.querySelectorAll('.apply-coupon-btn');
    const appliedCouponCodeInput = document.getElementById('appliedCouponCode');

    let originalTotalAmount = 0;
    let isOriginalAmountSet = false;

    couponForm.addEventListener('submit', (event) => {
        event.preventDefault();
        validateCode(couponCode.value.trim());
    });

    // Apply coupon buttons event listeners
    applyCouponBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const code = btn.getAttribute('data-coupon-code');
            couponCode.value = code;
            validateCode(code);
        });
    });

    // Function to validate and apply coupon
    const validateCode = async (code) => {
        try {
            const response = await fetch(`/applyCoupon/${code}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: 'Coupon applied successfully!'
                }).then(() => {
                    appliedCouponCodeInput.value = code;
                    updateCartSummary(data);  // Pass entire data object
                    $('#availableCouponsModal').modal('hide');
                    removeCouponBtn.style.display = 'inline-block';  // Show the remove button
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.message || 'Failed to apply the coupon.'
                });
            }
        } catch (error) {
            console.error('Error validating coupon code:', error);
        }
    };

    // Remove coupon button event listener
    removeCouponBtn.addEventListener('click', () => {
