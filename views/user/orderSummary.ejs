                    <div class="order-details">
                        <div class="order-info">
                            <h2 class="mb-3">Order Details</h2>
                            <p><strong>Order ID:</strong> <%= order.orderId %></p>
                            <p><strong>Total Amount:</strong> ₹ <%= order.totalAmount %></p>
                            <p><strong>Ordered Date:</strong> <%= 
                                new Date(order.orderDate).toLocaleDateString("en-US", {
                                  year: "numeric",
                                  month: "long",
                                  day: "numeric",
                                  hour: "2-digit",
                                  minute: "2-digit"
                                }) 
                              %></p>
                        </div>
                        <div class="address-details">
                            <p><strong>Ship to:</strong> <%= order.addressId.name %></p>
                            <p><strong>Delivery Address:</strong><br>
                                <%= order.addressId.address %>, <%= order.addressId.street %><br>
                                <%= order.addressId.state %>, <%= order.addressId.postalCode %><br>
                                <%= order.addressId.number %>
                            </p>
                        </div>
                    </div>
                    <h3 class="mt-4 mb-3">Products</h3>
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th></th>
                                <th>Product </th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let subtotal = 0; %>
                            <% order.products.forEach(item => { %>
                                <% const product = item.productId; %>
                                <% const itemTotal = product.price * item.quantity; %>
                                <% subtotal += itemTotal; %>
                                <% const variant = product.variants.find(v => v.sizes.includes(item.size)); %>
                                <% const variantImage = variant ? variant.images[0] : ''; %>
                                <tr>
                                    <td><img src="/assets/images/productImage/<%= variantImage %>" alt="<%= product.name %>" class="variant-image"></td>
                                    <td><%= product.name %> <br><%= variant.color  %> <br> <%= item.size  %></td>
                                    <td><%= item.quantity %></td>
                                    <td>₹<%= product.price.toFixed(2) %></td>
                                    <td>₹<%= itemTotal.toFixed(2) %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <div class="order-summary-footer">
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <h6>Subtotal: <span>₹<%= subtotal.toFixed(2) %></span></h6>
                                <h6>Shipping Charge: <span>₹<%= order.shippingCharge.toFixed(2) %></span></h6>
                                <h3 class="mt-4">Grand Total: <span>₹<%= subtotal + order.shippingCharge %></span></h3>
                            </div>
