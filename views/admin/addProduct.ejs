                  <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="form-group">
                      <h5>Product Images</h5>
                      <div class="row">
                        <% for (let i = 1; i <= 4; i++) { %>
                        <div class="col-lg-6 col-md-6 mb-3">
                          <label for="imageInput<%= i %>" class="file-upload">
