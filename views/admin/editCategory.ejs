    <!-- End Google Tag Manager (noscript) -->
    
    <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar  ">
    <div class="layout-container">
   <!-- Menu -->
   <%- include('../layout/admin/navbar.ejs') -%>

   <section class="d-flex justify-content-center align-items-center p-4">
    <div class="col col-md-8 col-lg-6 col-xxl-5">
      <div class="shadow-xl p-4 p-lg-5 bg-white">
        <h1 class="text-center fw-bold mb-5 fs-2">Edit Category</h1>

        <form
          action="/admin/edit-category"
          method="post"
          onsubmit="return validateCategory()"
        >
          <input type="hidden" name="id" value="<%= categoryedit._id %>" />

          <% if (messages.error) { %>
          <div
            class="alert alert-danger d-flex align-items-center"
            role="alert"
            id="error-alert"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="currentColor"
              class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2"
              viewBox="0 0 16 16"
              role="img"
              aria-label="Warning:"
            >
              <path
                d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"
              />
            </svg>
            <div>
              <strong>Hey !</strong>
              <%= messages.error %>
            </div>
          </div>

          <% } %>
          <div class="form-group">
            <label for="name">Name:</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="editname"
              value="<%= categoryedit.name %>"
              placeholder="Enter your name"
            />
          </div>
          <div class="form-group">
            <label for="description">Description:</label>
            <input
              type="text"
              class="form-control"
              id="description"
              name="editdisc"
              value="<%= categoryedit.description %>"
              placeholder="Enter description"
            />
          </div>
          <div class="form-group">
            <label for="gender">Gender:</label>
            <select class="form-control" id="gender" name="editgender">
                <option value="Men" <%= categoryedit.gender === 'Men' ? 'selected' : '' %>>Men</option>
                <option value="Women" <%= categoryedit.gender === 'Women' ? 'selected' : '' %>>Women</option>
            </select>
        </div>

          <div class="mt-4">
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/admin/categories" class="btn btn-primary">
              <span class="text">Back</span>
            </a>
          </div>
        </form>
      </div>
    </div>
  </section>



  
  <div class="content-backdrop fade"></div>
</div>
<!-- / Layout wrapper -->

<!-- Overlay -->
<div class="layout-overlay layout-menu-toggle"></div>

<!-- Drag Target Area To SlideIn Menu On Small Screens -->
<div class="drag-target"></div>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function validateCategory() {
      let categoryName = document.getElementById("name").value;
      let description = document.getElementById("description").value;
      let lettersRegex = /^[A-Za-z ]+$/;
      if (categoryName.trim() === "") {
        Swal.fire({
          icon: "error",
          text: "please fillproperly remove blank names",
        });
        return false;
      } else if (!lettersRegex.test(categoryName)) {
        Swal.fire({
          icon: "error",
          text: "Category name should contain only letters",
        });
        return false;
      } else if (description <= 10 || description.trim() === "") {
        Swal.fire({
          icon: "error",
          text: "need more description",
        });
        return false;
      }
      return true;
    }
  </script>

